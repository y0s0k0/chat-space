.flash-box
.wrapper
	.chat-side
		.side-header
			.side-header__box
				%p.side-header__box__user-name ###
				%ul.side-header__box__menu
					%li.side-header__box__menu__new-group
						= link_to do
							%i.fa.fa-edit
					%li.side-header__box__menu__edit-user
						= link_to do
							%i.fa.fa-cog
		.groups
			= link_to do
				.group
					%p.group__group-name ###
					%p.group__latest-message ###
	.chat-main
		.main-header
			.main-header__left-box
				%h2.main-header__left-box__current-group ###
				%ul.main-header__left-box__member-list
					Member :
					%li.main-header__left-box__member-list__member ###
			= link_to do
				.main-header__edit-btn Edit
		.messages
			.message
				.message__upper-info
					%p.message__upper-info__talker ###
					%p.message__upper-info__date ###
				%p.message__text ###
		.form
			%form.new-message#new-message
				%input{name: "utf8", type: "hidden", value: ""}
				%input{type: "hidden", name: "authenticity_token", value: ""}
				.input-box
					%input.input-box__text#message_content{placeholder: "type a message", type: "text", name: "message[content]"}
					%label.input-box__image
						%i.fa.fa-image
						%input.input-box__image__file#message_image{type: "file", name: "message[image]"}
				%input.submit-btn{type: "submit", name: "commit", value: "Send"}
				